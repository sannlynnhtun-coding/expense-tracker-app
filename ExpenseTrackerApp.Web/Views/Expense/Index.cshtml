@model IEnumerable<Expense>

@{
    ViewData["Title"] = "Expense List";
}

<h1>Expenses</h1>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Id</td>
                <td>@expense.Category.Name</td>
                <td>@expense.Amount</td>
                <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="/Expense/Edit/@expense.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Expense/Delete/@expense.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Expense/Create" class="btn btn-primary">Add New Expense</a>
